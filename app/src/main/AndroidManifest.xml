<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kid.words" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/label"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.words_activity"
            android:label="@string/words"/>
        <activity android:name=".activity.articles_activity"
            android:label="@string/articles"/>
        <activity android:name=".activity.articles_word_activity"
            android:label="@string/articles_word"/>
        <activity android:name=".activity.words_evaluate_activity"
            android:label="@string/words_evaluate"/>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
